<policies>
    <inbound>
        <base />
		<set-backend-service backend-id="PetStoreBackend" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
        <choose>
            <when condition="@(context.Variables.ContainsKey("OperationId"))">
                <set-header name="OperationId" exists-action="override">
                    <value>@(((string)context.Variables["OperationId"]))</value>
                </set-header>
            </when>
        </choose>
    </on-error>
</policies>